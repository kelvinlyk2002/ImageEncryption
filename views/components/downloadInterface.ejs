<div class="container">
    <div class="row">
        <div class="col-12">
            <h3>Decrypt & Download</h3>
        </div>
    </div>
    <form method="post" id="downloadForm" action="/decrypt">
        <div class="form-group row">
            <div class="col-12">
                <textarea class="form-control" name="inputEncryptedString" placeholder="Enter your encrypted string" rows="8" required></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="keySize" class="col-sm-2 col-form-label">Key:</label>
            <input type="text" class="col-sm-7 form-control" name="key" required placeholder="Enter the key set by the encryptor">
            <button class="btn btn-primary col-sm-2 mx-1" id="form_submit">Decrypt</button>
        </div>
</form>
</div>