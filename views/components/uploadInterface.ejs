<div class="container">
    <div class="row">
        <div class="col-12">
            <h3>Upload & Encrypt</h3>
        </div>
    </div>
    <form method="post" id="uploadForm" enctype="multipart/form-data" action="/encrypt">
        <div class="form-group row">
            <div class="col-12">
                <label for="file" class="col-form-label">Upload your image here:</label>
                <input type="file" id="imgInp" name="image" accept="image/jpeg" required>
                <small class="form-text text-muted">Accepts .JPG, .JPEG only. A small example of your image is going to be shown below!</small>
            </div>
        </div>
        <div class="form-group row justify-content-center" style="height: 130px;">
            <img id="inputDisplay" src="" alt="your image" style="max-width: 200px; max-height: 200px;"/>
        </div>
        <div class="form-group row">
            <label for="keySize" class="col-sm-2 col-form-label">Key:</label>
            <input type="text" class="col-sm-7 form-control" name="key" required placeholder="Set a key and share with your recipient">
            <button class="btn btn-primary col-sm-2 mx-1" id="form_submit">Encrypt</button>
        </div>
    </form>
</div>

<script>
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            inputDisplay.src = URL.createObjectURL(file)
        }
    }
</script>